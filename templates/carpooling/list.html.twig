{% extends 'base.html.twig' %}

{% block title %}Résultats des covoiturages{% endblock %}

{% block body %}

    {% include 'components/dark-header.html.twig' %}

        <div class="header-content-list">
        <img src="{{ asset('images/map.png')}}" alt="carte de lIle de france" class="map-image">
    </div>

        <div class="filter-container">
          <div class="filter">
            <label for="price">Prix maximum (€)</label>
            <input type="number" id="price" placeholder="27" min="0" max="200">
          </div>
          <div class="filter">
            <label for="duration">Durée max du voyage (En heure)</label>
            <input type="number" id="duration" placeholder="2h35" min="0" max="24h">
          </div>
          <div class="filter">
            <label for="fuel">Carburant</label>
            <select id="fuel">
              <option value="gasoline">Essence</option>
              <option value="diesel">Diesel</option>
              <option value="electric">Électrique</option>
            </select>
          </div>
          <div class="filter">
            <label for="rating">Note du conducteur (sur 5)</label>
            <input type="number" id="rating" placeholder="4" step="1" min="0" max="5">
          </div>
          <div class="button">
            <button type="submit">Rechercher</button>
          </div>
        </div>
<div class="carpoolings">
    <div class="carpooling-card">
    {% for carpooling in carpoolings %}
        <div class="carpooling-info">
        <ul>
            <li>{{ carpooling.placeOfDeparture }}</li>
            <li>Départ : {{ carpooling.departureDate|date('d/m/Y H:i') }}</li>
            <li>Arrivée : {{ carpooling.arrivalDate|date('d/m/Y H:i') }}</li>
            <li>{{ carpooling.numberOfPlace }}</li>
            <li>{{ carpooling.placeOfArrival }}</li>
            <li>
                Statut : {{ carpooling.statut ? carpooling.statut.value : 'Inconnu' }}
            </li>
            <li>{{ carpooling.personPrice }} €</li>
        </ul>
        </div>
        <button class="carpooling-btn">Réserver</button>
    </div>
    {% endfor %}
</div>


    {% include 'components/footer.html.twig' %}

{% endblock %}